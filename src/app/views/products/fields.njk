<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}
            <option value="{{category.id}}"{% if product.category_id == category.id %}selected{% endif %}>{{category.name}}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name"
        placeholder="Digite o nome do produto"
        value="{{ product.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description">{{product.description}}</textarea>
    </div>
</div>

{# CAMPO DE FOTO #}

<div class="item">
    <div>Valor</div>
    <div>
        <input 
        type="text" 
        name="price"
        value="{{ product.price }}"
        onkeydown="Mask.apply(this, 'formatBRL')"
        >
    </div>
    {% if product.old_price %}
        <input type="hidden" name="old_price" value={{product.old_price}}>
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input 
        type="number" 
        name="quantity"
        placeholder="Estoque disponível"
        value="{{ product.quantity }}"
        >
    </div>
</div>

{% if (product.status == '1') or (product.status == '0') %}
<div class="item">
    <div>Disponível</div>
    <div>
        <span><input type="radio" name="status" value="1" {% if product.status == '1' %}checked{% endif %}>Disponível</span>
        <span><input type="radio" name="status" value="0" {% if product.status == '0' %}checked{% endif %}>Indisponível</span>
    </div>
</div>
{% endif %}